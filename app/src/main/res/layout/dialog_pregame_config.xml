<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/configTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pre_game_configuration"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_per_player_minutes" />

        <EditText
            android:id="@+id/timeMinutesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/default_game_time_minutes"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_color_for_each_player" />

        <!-- Player color rows -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Player 1 -->
            <EditText
                android:id="@+id/player1NameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/player_1"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/player1ColorGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/p1Color1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_f58027_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p1Color2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_f5d327_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p1Color3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_33ad05_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p1Color4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_1c7aad_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p1Color5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_7026c9_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p1Color6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_d60d1e_alpha"
                    android:button="@android:color/transparent" />
            </RadioGroup>

            <!-- Player 2 -->
            <EditText
                android:id="@+id/player2NameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/player_2"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/player2ColorGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/p2Color1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_f58027_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p2Color2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_f5d327_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p2Color3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_33ad05_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p2Color4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_1c7aad_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p2Color5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_7026c9_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p2Color6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_d60d1e_alpha"
                    android:button="@android:color/transparent" />
            </RadioGroup>

            <!-- Player 3 -->
            <EditText
                android:id="@+id/player3NameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/player_1"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/player3ColorGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/p3Color1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_f58027_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p3Color2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_f5d327_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p3Color3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_33ad05_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p3Color4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_1c7aad_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p3Color5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_7026c9_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p3Color6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_d60d1e_alpha"
                    android:button="@android:color/transparent" />
            </RadioGroup>

            <!-- Player 4 -->
            <EditText
                android:id="@+id/player4NameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/player_1"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/player4ColorGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/p4Color1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_f58027_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p4Color2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_f5d327_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p4Color3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_33ad05_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p4Color4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_1c7aad_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p4Color5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_7026c9_alpha"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/p4Color6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/radio_bg_d60d1e_alpha"
                    android:button="@android:color/transparent" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_starting_player"
                android:layout_marginTop="8dp" />

            <RadioGroup
                android:id="@+id/startPlayerRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioPlayer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/position_player_1"
                    android:checked="true" />
                <RadioButton
                    android:id="@+id/radioPlayer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/position_player_2" />

                <RadioButton
                    android:id="@+id/radioPlayer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/position_player_3" />

                <RadioButton
                    android:id="@+id/radioPlayer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/position_player_4" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/cancelButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/startButton"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
